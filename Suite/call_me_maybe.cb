stanza bass7 = repeat(chordOfNote(e_8),8);
stanza bass8 = repeat(chordOfNote(c_8),4);
bass8 = concat(bass8, repeat(chordOfNote(c),2));
stanza bass9 = [double_e,eb];
stanza bass10 = [double_b,fb];

