int eighth = quarter / 2;

note g_8 = (G,0,quarter/2);
note g_16 = (G,0,quarter);
note d = (D,0,quarter);
note d_8 = (D,0,eighth);
note high_D = (D,1,quarter);
note e = (E,0,quarter);
note high_E = (E,1,quarter);
note e_8 = (E,0,eighth);
note c = (C,-1,quarter);
note c_8 = (C,-1,eighth);
note b = (B,0,quarter);
note high_B = (B,1,quarter);
note low_b = (B,-1,quarter);
note a = (A,0,quarter);
note f = (F,0,quarter);

chord db = ([d,b],eighth);
chord da = ([d,a],eighth);
chord dg = ([d,g_16],eighth);
chord gd_q = ([high_D,g_8],quarter);
chord gd_e = ([high_D,g_8],eighth);
chord double_e = ([high_E,e],quarter);
chord eb = ([high_E,high_B],48);
chord fb = ([b, f],48);
chord double_b = ([low_b,b],quarter);

meth stanza startRest()
    stanza tmp = [rest(eighth)];
    return tmp;
end

score piano_bass;
score piano_treble;

stanza s1 = repeat(chordOfNote(g_8),8);
