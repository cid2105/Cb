<- create a scale that repeats octave times, with increasing pitches.
     return a stanzas with all scales comined.
 ->

method  stanza doremi(int octaves, int duration){
    note do = (C, 0, duration);
    note re = (D, 0, duration);
    note mi = (E, 0, duration);
    scale s = [do, re, mi, (F,0, duration), (G,0, duration), (A,0, duration), (B,0, duration), (C,1 duration)];
    stanzas st = [];
    int c = 0;
    while(c < octaves){
        st.prepend(s);
        st.prepend((R,0, duration));
        s^+;
        c = c +1;
    }
    return st;
}
